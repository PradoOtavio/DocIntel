@using DocIntel.WebApp.Helpers
@model DocIntel.WebApp.Areas.Synapse.Views.Node.NodeDetailsViewModel

@{
    var coreValue = !string.IsNullOrEmpty(Model.Root.Repr as string) ? Model.Root.Repr : Model.Root.Valu;
    
    ViewBag.Title = $"[{Model.Root.Form}] {coreValue}";
    Layout = "_Layout";
}


<div class="subheader">
    <h1 class="subheader-title">
        <span class="badge badge-primary mr-2">@Model.Root.Form</span> @coreValue
    </h1>
</div>

<div class="row">
    <div class="col-9">
        @await Html.PartialAsync("_PanelNodeProperties", Model, new ViewDataDictionary(ViewData))
        @await Html.PartialAsync("_PanelDocumentList", Model, new ViewDataDictionary(ViewData))
    </div>
    <div class="col-3">
        @await Html.PartialAsync("_PanelMetadata", Model.Root, new ViewDataDictionary(ViewData))
    </div>
</div>