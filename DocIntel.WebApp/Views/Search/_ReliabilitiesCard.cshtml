@using DocIntel.Core.Helpers
@model DocIntel.WebApp.ViewModels.SearchViewModel.SearchIndexViewModel

@if (Model.Reliabilities.Any())
{
    <div class="card">
        <div class="card-header">
            <a href="javascript:void(0);" class="card-title fs-md collapsed" data-toggle="collapse" data-target="#collapseReliability" aria-expanded="false">
                Source Reliability
            </a>
        </div>
        <div id="collapseReliability" class="collapse" aria-labelledby="" data-parent="#accordion_meta">
            <div class="card-body">
                @foreach (var item in Model.Reliabilities)
                {
                    
                    <div class="mb-1 d-flex tag-selection" 
                         data-value-id="@((int)item.Value)"
                         data-value-name="@(EnumHelper<SourceReliability>.GetDisplayValue(item.Value))" 
                         data-default-filter-field="source_reliability"
                         data-default-filter="reliability"
                         data-default-filter-name="Source Reliability">
                        <div class="mr-2" style="white-space: nowrap;">
                            <i class="fa fa-search-plus"></i>
                            <i class="fa fa-search-minus"></i>
                        </div>
                        <div class=flex-grow-1>
                            <span>
                                @(EnumHelper<SourceReliability>.GetDisplayValue(item.Value))
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}