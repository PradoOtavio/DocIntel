@model DocIntel.WebApp.ViewModels.SearchViewModel.SearchIndexViewModel

@if (Model.Classifications.Any())
{
    <div class="card">
        <div class="card-header">
            <a href="javascript:void(0);" class="card-title fs-md collapsed" data-toggle="collapse" data-target="#collapseClassifications" aria-expanded="false">
                Classification
            </a>
        </div>
        <div id="collapseClassifications" class="collapse" aria-labelledby="headingClassifications" data-parent="#accordion_meta">
            <div class="card-body">
                @foreach (var item in Model.Classifications)
                {
                    <div class="mb-1 d-flex tag-selection" 
                         data-value-id="@item.Value.ClassificationId"
                         data-value-name="@item.Value.Title"
                         data-value-color="@item.Value.Color" 
                         data-default-filter-field="classification"
                         data-default-filter="Classification"
                         data-default-filter-name="Classification">
                        <div class="mr-2" style="white-space: nowrap;">
                            <i class="fa fa-search-plus"></i>
                            <i class="fa fa-search-minus"></i>
                        </div>
                        <div class=flex-grow-1>
                            <span>
                                @item.Value.Title
                            </span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}